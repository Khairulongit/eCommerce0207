<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Admin.FinalConfirmOrdersActivity">

    <include layout="@layout/toolbar"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/interneton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/admin_final_product_image_deytails"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_card"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mutton_chatpata"
                    app:shapeAppearanceOverlay="@style/Roundedsquare">

                </com.google.android.material.imageview.ShapeableImageView>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/admin_final_product_image_deytails"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/admin_final_product_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:drawablePadding="16dp"
                        android:hint="Date"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/admin_final_product_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                        android:drawablePadding="16dp"
                        android:hint="Time"
                        android:inputType="textMultiLine"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/admin_final_product_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_local_grocery_store_24"
                        android:drawablePadding="16dp"
                        android:hint="Product Name"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/admin_final_product_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_quantity_feed_24"
                        android:drawablePadding="16dp"
                        android:hint="Quavtity "
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_final_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_rupee"
                        android:drawablePadding="16dp"
                        android:hint="Price"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_final_product_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_home_24"
                        android:drawablePadding="16dp"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:padding="8dp"
                        android:textColor="#38118C"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
                <!--        android:layout_width="wrap_content"-->
                <!--        android:layout_height="wrap_content"-->
                <!--        android:elevation="6dp"-->
                <!--        android:layout_alignParentBottom="true"-->
                <!--        android:layout_margin="15dp"-->
                <!--        android:id="@+id/add_product_to_cart"-->
                <!--        android:layout_alignParentRight="true"-->
                <!--        android:src="@drawable/nav_cart">-->
                <Button
                    android:id="@+id/admin_delivery_confirm"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_above="@+id/liner111"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_back"
                    android:text="Delivery Done"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/liner111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/admin_final_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_back"
                        android:text="Confirm"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/admin_final_notconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_back"
                        android:text="Not Confirm"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nointenetlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nointenet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/nointernet"
                    >

                </ImageView>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
