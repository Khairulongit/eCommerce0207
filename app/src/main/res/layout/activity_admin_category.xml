    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/interneton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/liner_category_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tshirt"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/tshirts">

                    </ImageView>

                    <ImageView
                        android:id="@+id/sports_tshirt"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/sports">

                    </ImageView>

                    <ImageView
                        android:id="@+id/female_shirt"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/female_dresses">

                    </ImageView>

                    <ImageView
                        android:id="@+id/swater"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/sweather">

                    </ImageView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_category_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liner_category_lay"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sunglass"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/glasses">

                    </ImageView>


                    <ImageView
                        android:id="@+id/purse"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/purses_bags">

                    </ImageView>

                    <ImageView
                        android:id="@+id/hats"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/hats">

                    </ImageView>

                    <ImageView
                        android:id="@+id/shoes"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/shoess">

                    </ImageView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_category_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liner_category_lay1"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/headphones"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/headphoness">

                    </ImageView>


                    <ImageView
                        android:id="@+id/laptop"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/laptops">

                    </ImageView>

                    <ImageView
                        android:id="@+id/watches"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/watches">

                    </ImageView>

                    <ImageView
                        android:id="@+id/mobiles"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/mobiles">

                    </ImageView>


                </LinearLayout>

                <!--    <Button-->
                <!--        android:id="@+id/check_productx_btn"-->
                <!--        android:layout_width="match_parent"-->
